@model IEnumerable<BlogPostListItemViewModel>

@{
    ViewData["Title"] = "Blog Posts";
}

<div class="container mt-4 list-view">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Blog Posts</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" asp-controller="BlogPost" class="btn btn-primary">+ Create Post</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No blog posts found.</div>
    }
    else
    {
        <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Author</th>
                    <th>Created</th>
                    <th class="text-center">Comments</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td><strong>@post.Title</strong></td>
                        <td class="text-truncate" style="max-width:300px;">@post.Summary</td>
                        <td>@post.AuthorName</td>
                        <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td class="text-center"><span class="badge bg-primary">@post.CommentCount</span></td>
                        <td class="text-center action-buttons">
                            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning ms-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
</div>
