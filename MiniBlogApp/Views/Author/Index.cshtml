@using MiniBlogApp.ViewModels
@model IEnumerable<AuthorListItemViewModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Authors</h1>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Author")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Author
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No authors found.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Created</th>
                    <th class="text-center">Posts</th>
                    <th>Post Titles</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var author in Model)
        {
                <tr>
                    <td><strong>@author.FullName</strong></td>
                    <td>@author.Email</td>
                    <td>@author.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td class="text-center">
                        <span class="badge bg-primary">@author.PostCount</span>
                    </td>
                    <td>
                        @if (author.PostTitles.Any())
                        {
                            <ul class="mb-0 ps-3">
                            @foreach (var title in author.PostTitles)
                            {
                                <li>@title</li>
                            }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No posts</span>
                        }
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", "Author", new { id = author.Id })" 
                           class="btn btn-sm btn-info">View</a>
                        <a href="@Url.Action("Edit", "Author", new { id = author.Id })" 
                           class="btn btn-sm btn-warning ms-1">Edit</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    }
</div>
