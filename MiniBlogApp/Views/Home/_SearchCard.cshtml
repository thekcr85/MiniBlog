@model string // This is passed from the parent view to retain the current search term. This was an variable in ViewBag in the parent view.

<div class="card mb-3">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">Search Authors</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Author" asp-action="Search" method="get" class="d-flex gap-2">
            <input type="text" name="searchTerm" class="form-control form-control-sm" placeholder="Search by name or email..." value="@Model" />
            <button class="btn btn-sm btn-primary" type="submit">Search</button>
        </form>
        @if (!string.IsNullOrEmpty(Model))
        {
            <div class="mt-2">
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-secondary w-100">Clear Search</a>
            </div>
        }
    </div>
</div>
